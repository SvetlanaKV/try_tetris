<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#444444"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.svetlana.try_tetris.MainActivity">

    <Button
        android:id="@+id/start_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/records_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp"
        android:background="#3a52de"
        android:minHeight="80dp"
        android:minWidth="200dp"
        android:text="Go To Game!"
        android:textColor="@android:color/white"
        android:textSize="25dp" />

    <Button
        android:id="@+id/records_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#3a52de"
        android:minHeight="80dp"
        android:minWidth="200dp"
        android:text="Records"
        android:textColor="@android:color/white"
        android:textSize="25dp" />

    <Button
        android:id="@+id/about_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/records_button"
        android:layout_alignStart="@+id/records_button"
        android:layout_below="@+id/records_button"
        android:layout_marginTop="59dp"
        android:background="#3a52de"
        android:minHeight="80dp"
        android:minWidth="200dp"
        android:text="About"
        android:textColor="@android:color/white"
        android:textSize="25dp" />

</RelativeLayout>
